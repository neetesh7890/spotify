<div id="mylogin" class="modal fade" role="dialog" ">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content back-color" >
      <div class="modal-header" style="background-color: #5e5d66;" >
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Login here...</h4>
      </div>
      
      <div class="modal-body back-color">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), remote: :true) do |f| %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: "single-txt", autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, class: "single-txt", autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions col-md-2" >
            <%= f.submit "Log in",  class: "single-txt" %>
          </div>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>