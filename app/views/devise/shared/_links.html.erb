<%- if controller_name != 'sessions' %>
  <h3><%= link_to "Log in", new_session_path(resource_name), :class => "orange-color" %><br /></h3>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), :class => "orange-color" %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "orange-color" %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), :class => "orange-color" %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), :class => "orange-color" %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, :class => "orange-color" %>
<% end -%>
